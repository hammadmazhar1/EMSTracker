-# edit.html.haml using partial

%h1 Edit Existing User

= form_tag edit_user_path(@user), :method => :put do

  = label :user, :password, 'Password'
  = password_field :user, 'password'

  = label :user, :password_confirmation, 'Confirm password'
  = password_field :user, 'password_confirmation'

  = label :user, :rollno, 'Roll Number'
  = text_field :user, 'rollno'

  = label :user, :phoneno, 'Phone Number'
  = text_field :user, 'phoneno'

  = submit_tag 'Update Changes'
